<%- include("../partials/header") %>

<div id="uploadContainer" class="container">
    <div class="row">
        <div style="margin: 30px auto;">
            <h2 id="uploadPhrase" style="text-align: center;">Post Your Profile</h2>
            <form action="/poster" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="poster[price]" placeholder="Price" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="poster[skills]" placeholder="Email Info" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="poster[location]" placeholder="Location" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="poster[description]" placeholder="Tell us more about you" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/poster">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>