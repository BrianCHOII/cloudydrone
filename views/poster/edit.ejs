<%- include("../partials/header") %>

<div id="uploadContainer" class="container">
    <div class="row">
        <div style="margin: 30px auto;">
            <h2 style="text-align: center;">Edit Your Profile</h2>
            <form action="/poster/<%= poster._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="poster[price]" value="<%= poster.price %>" placeholder="Price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="poster[skills]" value="<%= poster.skills %>" placeholder="Email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="poster[location]" value="<%= poster.location %>" placeholder="Location">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="poster[description]" value="<%= poster.description %>" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/poster">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>