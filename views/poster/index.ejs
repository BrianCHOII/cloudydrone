<%- include("../partials/header") %>

<section class="container-fluid px-0">
    <div class="row align-items-center content">
        <div id="mainBoard" class="col-md-8 text-center order-1 order-md-2">
            <div class="row justify-content-center">
                <div id="mainPhrase" class="col-10 col-lg-8 blurb mb-5 mb-md-0">
                    <h2>Top Rated Drone Videographer</h2>
                    <p class="lead">Find top Drone Videographers here at CloudyDrone.</p>
                    <a href="/poster/new" class="btn btn-outline-info btn-sm">Post Your Profile</a>
                </div>
            </div>
        </div>
        <div class="d-none d-md-block col-md-4 order-2 order-md-1">
            <img src="/image/main_white.jpeg" alt="" class="img-fluid">
        </div>
    </div>

    <div class="container">
        <hr id="divider">

        <h3 id="howTitle" class="text-center">How it works</h3>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <div class="row">
                    <div class="col-xs-12 col-md-4">
                        <div class="row">
                            <div class="d-none d-md-block hiw-image text-center col-md-4 col-lg-3 col-lg-offset-1 col-xl-12 col-xl-offset-0">
                                <img id="howIcon" src="/image/profileIcon.jpg" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-8">
                        <div class="col-md-8 col-lg-7 col-xl-12">
                            <h5>1. Post a profile</h5>
                            <p>Tell us about you. CloudyDrone Connects you with people who need your talents and skills.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="row">
                    <div class="col-xs-12 col-md-4">
                        <div class="row">
                            <div class="d-none d-md-block hiw-image text-center col-md-4 col-lg-3 col-lg-offset-1 col-xl-12 col-xl-offset-0">
                                <img id="howIcon" src="/image/connectIcon.png" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-8">
                        <div class="col-md-8 col-lg-7 col-xl-12">
                            <h5>2. Client contacts you</h5>
                            <p>Connect with the client and figure out how you can provide services for them! </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr id="divider">
    </div>


    <section id="displaySection">
        <div class="row justify-content-center">
            <div class="col-lg-12 text-center">
                <h3 id="displayPhrase">Check Out the Vidoegraphers!</h3>
            </div>
        </div>
        <div id="displayContainer" class="container">
            <div class="jumbotron">
                <div class="row text-center">
                    <% posters.forEach( poster => { %> 
                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4">
                            <div class="card">
                                <img class="card-img-top" src="<%= poster.image %>" alt="">
                                <div class="card-body">
                                    <h5 class="card-title"><%= poster.author.firstName %> <%= poster.author.lastName %></h5>
                                    <a href="/poster/<%= poster._id %>" class="btn btn-outline-primary">More Info</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </section>
</section>

<%- include("../partials/footer") %>